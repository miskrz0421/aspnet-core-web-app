<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PiwkoMozna</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PiwkoMozna.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PiwkoMozna</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if(Context.Session.GetString("IsLoggedIn") != null && Context.Session.GetString("IsLoggedIn") == "true") 
                        {                            
                            @if (Context.Session.GetString("IsAdmin") != null && Context.Session.GetString("IsAdmin") == "True")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Dokumentacja">Dokumentacja</a>
                                </li> 
                                <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="PiwoModel" asp-action="Katalog">Katalog Piw</a>
                                </li>                                
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="BrowarModel" asp-action="Index">Browary</a>
                                </li> 
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="PiwoModel" asp-action="Index">Piwa</a>
                                </li> 
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="UzytkownikModel" asp-action="Index">Użytkownicy</a>
                                </li> 
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="RecenzjaModel" asp-action="Index">Recenzje</a>
                                </li>                               
                                <li class="nav-item ms-auto me-3">
                                    <form asp-controller="Home" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-primary">Wyloguj</button>
                                    </form>
                                </li>
                                
                            }
                            else {                                
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Dokumentacja">Dokumentacja</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="PiwoModel" asp-action="Katalog">Katalog Piw</a>
                                </li>
                                <li class="nav-item ms-auto me-3">
                                    <form asp-controller="Home" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-primary">Wyloguj</button>
                                    </form>
                                </li>                                
                            }
                            
                        }
                        else 
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Dokumentacja">Dokumentacja</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="">Aby uzyskać dostęp do pełnej zawartości strony, należy się zalogować.</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; PiwkoMozna -- Michał Krzempek, Kacper Machnik
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
